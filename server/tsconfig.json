{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["*"],
      "@http/*": ["http/*"],
      "@services/*": ["services/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
